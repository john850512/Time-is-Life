<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.macdidi.google_api_o_i_o_i.MainActivity"
    android:background="@drawable/bg1"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time is Life"
        android:id="@+id/app_name"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:textColor="@color/淺橘透明" />
    <TextView
        android:text="道路避讓即時警示系統"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mr_ic_close_dark"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/hidden" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mr_ic_close_dark"
                android:layout_alignRight="@+id/hidden"
                android:layout_marginRight="80dp"
                android:id="@+id/hidden1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/smallgreenbutton"
                android:layout_gravity="center"
                android:layout_alignRight="@+id/hidden"
                android:layout_marginRight="80dp"
                android:gravity="center"

                android:id="@+id/imageView2" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/smallgraybutton"
                android:layout_alignRight="@+id/hidden"
                android:layout_marginRight="80dp"
                android:id="@+id/imageView" />
            <Switch
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:splitTrack="false"
                android:switchMinWidth="55dp"
                android:text="行駛狀態"
                android:checked="false"
                android:textSize="14sp"
                android:layout_alignLeft="@+id/hidden1"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:thumb="@drawable/switch_selector" />
        </RelativeLayout>

    </LinearLayout>
